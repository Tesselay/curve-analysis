<?xml version="1.0" encoding="UTF-8"?>

<?import sample.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<FlowPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CurveAnalysisController">
    <HBox>
        <VBox style="-fx-border-color: black">
            <GridPane>
                <Label text="f(x) = " GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>
                <Label fx:id="lx4" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>
                <Label fx:id="lx3" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>
                <Label fx:id="lx2" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>
                <Label fx:id="lx1" GridPane.columnIndex="4" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>
                <Label fx:id="lx" GridPane.columnIndex="5" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>


                <Spinner prefWidth="40" editable="true" amountToStepBy="0.1" initialValue="0." max="10000." min="-10000." fx:id="x4" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Spinner prefWidth="40" editable="true" amountToStepBy="0.1" initialValue="0." max="10000." min="-10000." fx:id="x3" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Spinner prefWidth="40" editable="true" amountToStepBy="0.1" initialValue="0." max="10000." min="-10000." fx:id="x2" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <Spinner prefWidth="40" editable="true" amountToStepBy="0.1" initialValue="0." max="10000." min="-10000." fx:id="x1" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                <Spinner prefWidth="40" editable="true" amountToStepBy="0.1" initialValue="0." max="10000." min="-10000." fx:id="x0" GridPane.columnIndex="5" GridPane.rowIndex="1"/>

            </GridPane>
            <Label fx:id ="completeCurve" />
            <Label text = "Symmetries:"/>
            <Label fx:id="symmetries"/>
            <Label text = "Degree of function:"/>
            <Label fx:id="degree"/>
            <Label text = "Y-intercept:"/>
            <Label fx:id="yAxesCrossing"/>
            <Label text = "roots:"/>
            <Label fx:id="zeroPoints"/>


        </VBox>
        <StackPane fx:id="myPane" minHeight="600" minWidth="800" style="-fx-background-color: white">
            <Axes fx:id="myAxes" />
        </StackPane>
    </HBox>
</FlowPane>
